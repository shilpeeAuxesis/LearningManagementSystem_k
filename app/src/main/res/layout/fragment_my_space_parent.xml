<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="Courses"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPadding="@dimen/_15sdp">

                        <LinearLayout
                            android:id="@+id/llLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/spinnerTypeOfLevel"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:dropDownWidth="fill_parent"
                                    android:spinnerMode="dropdown" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_below="@+id/spinnerTypeOfLevel"
                                    android:background="@color/colorGray_3" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:orientation="vertical">

                                    <Spinner
                                        android:id="@+id/spinnerDuration"
                                        style="@style/SpinnerTheme"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:dropDownWidth="fill_parent"
                                        android:spinnerMode="dropdown" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_below="@+id/spinnerDuration"
                                        android:background="@color/colorGray_3" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvQuantity"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="left|center"
                                        android:text="Quantity"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvQuantityVal"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="right|center"
                                        android:text="1"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_below="@+id/tvQuantity"
                                        android:background="@color/colorGray_3" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvPrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="left|center"
                                        android:text="Price"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvPriceVal"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="right|center"
                                        android:text="1"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_below="@+id/tvPrice"
                                        android:background="@color/colorGray_3" />
                                </RelativeLayout>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnAddToCart"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:background="@color/colorPrimaryDark"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Add to cart"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvLesson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="Lessons"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewLesson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentPadding="@dimen/_15sdp">

                        <LinearLayout
                            android:id="@+id/llLayoutLesson"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/spinnerTypeOfLevelL"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:dropDownWidth="fill_parent"
                                    android:spinnerMode="dropdown" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_below="@+id/spinnerTypeOfLevelL"
                                    android:background="@color/colorGray_3" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:orientation="vertical">

                                    <Spinner
                                        android:id="@+id/spinnerDurationL"
                                        style="@style/SpinnerTheme"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:dropDownWidth="fill_parent"
                                        android:spinnerMode="dropdown" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_below="@+id/spinnerDurationL"
                                        android:background="@color/colorGray_3" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_45sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvQuantityL"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="left|center"
                                        android:text="Quantity"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvQuantityValL"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="right|center"
                                        android:text="1"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_below="@+id/tvQuantityL"
                                        android:background="@color/colorGray_3" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_50sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvPriceL"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="left|center"
                                        android:text="Price"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/tvPriceValL"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_40sdp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:gravity="right|center"
                                        android:text="1"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="@dimen/_12sdp" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_1sdp"
                                        android:layout_below="@+id/tvPriceValL"
                                        android:background="@color/colorGray_3" />

                                </RelativeLayout>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnAddToCartL"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:background="@color/colorPrimaryDark"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Add to cart"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>